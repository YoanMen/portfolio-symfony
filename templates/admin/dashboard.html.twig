{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Dashboard
{% endblock %}

{% block main %}
	<div class="col w-100 mx-auto row px-md-4">

		{% if chart is not null %}
			<div class="col mb-5">
				{{ render_chart(chart) }}
			</div>
		{% endif %}
		<div class="col">
			<h2 class="mb-4 h4">Last attempt connection</h2>
			<div class="table-responsive small">
				<table class="table table-striped table-md">
					<thead>
						<tr>
							<th scope="col">Date</th>
							<th scope="col">IP Adress</th>
						</tr>
					</thead>
					<tbody>
						{% if attempt is not null %}
							<tr>
								<td>
									{{ attempt.getAttemptAt() }}
								</td>
								<td>{{ attempt.getIp() }}</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
